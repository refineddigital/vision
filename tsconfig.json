{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "declaration": true,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "pretty": true,
        "removeComments": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es2017"
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./vision/**/*"]
}
